@{
    ViewData["Title"] = "Dashboard";
}

<script type="text/html" src="/templates/public/home/body.html" id="template-body">
</script>

<placeholder class="template-body">
    <div class="wait-for-templates">
        <center>
            <div>
                <!--<span class="oi oi-cog icon-spin"></span>-->
                <h2><i class="fas fa-spinner fa-pulse"></i></h2>
            </div>
            <div>Loading, please wait...</div>
        </center>
    </div>
</placeholder>


@section Scripts
    {
    <script src="~/js/public/home.js" type="text/javascript" asp-append-version="true"></script>

    <script type="text/javascript">

        //init DateTimePickers
        // materialKit.initFormExtendedDatetimepickers();

        // Sliders Init
        // materialKit.initSliders();

        $(function () {
            window.Harpocrates.common.templates.load().done(
                function () {
                    var vm = window.Harpocrates.app.createViewModel();

                    ko.applyBindings(vm.nav.menu, $('div.template-menu')[0]);
                    ko.applyBindings(vm.nav.sidebar, $('div.template-sidebar')[0]);

                    ko.applyBindings(vm.body, $('div.template-body')[0]);

                    ko.applyBindings(vm.nav.footer, $('div.template-footer')[0]);
                }
            );
        });
    </script>
}